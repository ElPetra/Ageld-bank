{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "noEmit": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES2021.String",
      "ES6"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
