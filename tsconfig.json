{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "allowImportingTsExtensions": true,
    "preserveConstEnums": true,
    "target": "ES6",
    "noEmit": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES2021.String",
      "ES6"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
